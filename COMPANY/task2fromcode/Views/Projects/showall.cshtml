            <th class="col-2">Project Location </th>
                <th class="col-3">Actions</th>

            </tr>
        </thead>
        <tbody>

            @{
                var index=1;
                }
@foreach(var item in Model)
{
                <tr>
                    <th>@(index++)</th>
                    <td>@item.Name  </td>
                <td>@item.Pnumber  </td>
                <td>@item.location  </td>

                    <td><a class="btn btn-info" href="/employee/getinfo/">Details</a> <a class="btn btn-primary" href="/employee/editform/">Edit</a> <a class="btn btn-danger" href="/Projects/delete/@item.Pnumber">Delete</a></td>
                </tr>
            


}

</tbody>
