@{
}
@model List<employee>

@{
    int index = 1;
}
<div>
    <div>
        <a class="btn btn-success" asp-action="addemp" asp-controller="Taghelper">ADD NEW EMP</a>
    </div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th class="col-1">#</th>
                <th class="col-8">Name</th>
                <th class="col-3">Actions</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th>@(index++)</th>
                    <td>@item.Fname  @item.Mname @item.Lname</td>

                    <td><a class="btn btn-info" asp-controller="Taghelper" asp-action="getinfoemp" asp-route-id="@item.SSN">Details</a> <a class="btn btn-primary" asp-controller="Taghelper" asp-action="editemployee" asp-route-id="@item.SSN">Edit</a> <a class="btn btn-danger" asp-controller="Taghelper" asp-action="deleteemp" asp-route-id="@item.SSN">Delete</a></td>
                </tr>
            }





        </tbody>
    </table>

</div>